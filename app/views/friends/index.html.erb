
<h1>Your friends list</h1>


<table class="table table-hover table-bordered table-striped">
  <thead class="thead">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th> 
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to 'Show', friend, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', friend, class:"btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-success" %>

